<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <div class="row">
    <div class="small-8">
      <div class="row">
        <div class="small-3 columns">
          <%= f.label :first_name %>            
        </div>
        <div class="small-9 columns">
          <%= f.text_field :first_name%>
        </div>  
      </div>
    </div>
  </div> 

  <div class="row">
    <div class="small-8">
      <div class="row">
        <div class="small-3 columns">
          <%= f.label :last_name %>            
        </div>
        <div class="small-9 columns">
          <%= f.text_field :last_name%>
        </div>  
      </div>
    </div>
  </div> 

  <div class="row">
    <div class="small-8">
      <div class="row">
        <div class="small-3 columns">
          <%= f.label :email %>            
        </div>
        <div class="small-9 columns">
          <%= f.email_field :email%>
        </div>  
      </div>
    </div>
  </div>  


  <div class="row">
    <div class="small-8">
      <div class="row">
        <div class="small-3 columns">
          <%= f.label :password %>            
        </div>
        <div class="small-9 columns">
          <%= f.password_field :password %>
        </div>  
      </div>
    </div>
  </div>  


  <div class="row">
    <div class="small-8">
      <div class="row">
        <div class="small-3 columns">
          <%= f.label :password_confirmation %>            
        </div>
        <div class="small-9 columns">
          <%= f.password_field :password_confirmation %>
        </div>  
      </div>
    </div>
  </div>  

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
